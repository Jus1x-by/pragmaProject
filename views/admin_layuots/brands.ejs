<%- include ('header') -%>


<div class="container__table">
    <a href="/admin/brands/add-brand" class="table__add"><img src="/img/icons/plus.svg" alt="Добавить"></a>
    <table>
        <thead>
            <tr>
                <th>Brand</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% brands.forEach((brand) => { %>
            <tr>
                <td><%= brand.title %></td>
                <td><a href="/admin/brands/edit-brand/<%= brand._id %>">Edit</a></td>
                <td><a href="/admin/brands/delete-brand/<%= brand._id %>">Delete</a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>


<%- include ('footer') -%>